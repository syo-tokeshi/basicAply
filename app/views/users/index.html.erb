<h1 class="text-danger">ユーザー一覧</h1>
<br>
<table class="table table-hover text-success">
  <tbody >
    <thead>
      <tr class="text-danger">
        <th>入会順</th>
        <th>名前</th>
        <th>Eメール</th>
        <th>入会日</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.id}人目",user_path(user) %></td>
        <td><%= link_to user.name,user_path(user) %></td>
        <td><%= link_to user.email,user_path(user) %></td>
        <td><%= link_to user.created_at.strftime("%Y-%m-%d %H:%M"),user_path(user) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate(@users) %>
